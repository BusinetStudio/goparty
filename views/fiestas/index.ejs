    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
      
      <%- include('../sidebars/index'); -%>
      <!-- partial -->
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="card">
                    <div class="card-body">
                        <h2 class="mb-4">Fiestas</h2> 
                        <div class="row justify-content-center">
                            <div class="col-12">
                                <table id="dataTable" class="display table table-striped responsive" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Usuario</th>
                                            <th>Nombre de la fiesta</th>
                                            <th>Fecha</th>
                                            <th>Hora</th>
                                            <th>Opciones</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Usuario</th>
                                            <th>Nombre de la fiesta</th>
                                            <th>Fecha</th>
                                            <th>Hora</th>
                                            <th>Opciones</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        <%  eventos.forEach(function(evento){ %>
                                                <tr>
                                                    <td><%= evento.nombre_usuario %></td>
                                                    <td><%= evento.nombre %></td>
                                                    <td><%= evento.fecha_del_evento %></td>
                                                    <td><%= evento.hora_del_evento %></td>
                                                    <td class="text-right">
                                                        <a href="/fiestas/editar/<%= evento.id %>"  class="text-warning info mr-3">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a href="/fiestas/borrar/<%= evento.id %>" class="text-danger">
                                                            <i class="fas fa-times"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                        <% }) %>
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <!-- content-wrapper ends -->
