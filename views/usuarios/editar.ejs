<%- include('../header'); -%>
  <%- include('../navbar'); -%>
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
      
      <%- include('../sidebars/index'); -%>
      <!-- partial -->
        <div class="main-panel">
            <div class="content-wrapper">
                <h2 class="mb-4">Editar Usuario</h2>
                <div class="row justify-content-center">
                    <div class="col-12 grid-margin">
                        <form class="form-sample" action="/usuarios/nuevo" method="POST">
                            <div class="card mb-5">
                                <div class="card-body">
                                    <h4 class="card-title text-uppercase">Editar datos de la nueva cuenta</h4>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Usuario</label>
                                                <div class="col-sm-9">
                                                    <input type="text" value="<%= usuario.username %>" class="form-control" name="username" />
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Correo Electrónico</label>
                                                <div class="col-sm-9">
                                                    <input type="email" value="<%= usuario.email %>" name="email" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Nueva Contraseña</label>
                                                <div class="col-sm-9">
                                                    <input type="password" name="password" class="form-control" />
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Repetir contraseña</label>
                                                <div class="col-sm-9">
                                                    <input type="password" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% if(usuario.privilege == 'Admin'){ %>
                                        <div class="row justify-content-end mt-4">
                                            <button type="submit" class="btn btn-primary">Guardar</button>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                            <% if(usuario.privilege == 'Usuario'){ %>
                                <div class="card" id="cliente">
                                    <div class="card-body">
                                        <h4 class="card-title text-uppercase">Información del cliente</h4>
                                        <p class="card-description font-weight-bold">
                                            Información personal
                                        </p>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Nombres</label>
                                                <div class="col-sm-9">
                                                    <input type="text"  value="<%= usuario.nombres %>" name="nombres" class="form-control" />
                                                </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label">Apellidos</label>
                                                    <div class="col-sm-9">
                                                        <input type="text" value="<%= usuario.apellidos %>" name="apellidos" class="form-control" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label">Genero</label>
                                                    <div class="col-sm-9">
                                                        <select name="genero"  value="<%= usuario.genero %>" class="form-control">
                                                            <option value="Masculino">Masculino</option>
                                                            <option value="Femenino">Femenino</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label">Fecha de Nacimiento</label>
                                                    <div class="col-sm-9">
                                                        <input class="form-control" value="<%= usuario.fecha_nacimiento %>" name="fecha_nacimiento" placeholder="dd/mm/yyyy" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label">Teléfono</label>
                                                    <div class="col-sm-9">
                                                        <input type="tel" value="<%= usuario.telefono %>" name="telefono" class="form-control" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label">Celular</label>
                                                    <div class="col-sm-9">
                                                            <input type="tel" value="<%= usuario.celular %>" name="celular" class="form-control" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <p class="card-description font-weight-bold mt-4">
                                            Dirección
                                        </p>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label">Dirección</label>
                                                    <div class="col-sm-9">
                                                        <input type="text" value="<%= usuario.direccion %>" name="direccion" class="form-control" />
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label">Pais</label>
                                                    <div class="col-sm-9">
                                                        <select name="pais"  value="<%= usuario.pais %>" class="form-control">
                                                            <option>Perú</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label">Departamento</label>
                                                    <div class="col-sm-9">
                                                        <input name="departamento" value="<%= usuario.departamento %>" type="text" class="form-control" />
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label">Distrito</label>
                                                    <div class="col-sm-9">
                                                        <input name="distrito" value="<%= usuario.distrito %>" type="text" class="form-control" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label">Provincia</label>
                                                    <div class="col-sm-9">
                                                        <input name="provincia" value="<%= usuario.provincia %>" type="text" class="form-control" />
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label">Ciudad</label>
                                                    <div class="col-sm-9">
                                                        <input name="ciudad" value="<%= usuario.ciudad %>" type="text" class="form-control" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row justify-content-end mt-4">
                                            <button type="submit" class="btn btn-primary">Crear usuario</button>
                                        </div>
                                    </div>
                                </div>
                            <% }else if(usuario.privilege == 'Proveedor'){ %>
                                <div class="card" id="proveedor">
                                    <div class="card-body">
                                        <h4 class="card-title text-uppercase">Información del proveedor</h4>
                                        <p class="card-description font-weight-bold">
                                            Información empresa
                                        </p>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Empresa</label>
                                                <div class="col-sm-9">
                                                    <input type="text" value="<%= usuario.empresa %>" name="empresa" class="form-control" />
                                                </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label">RUC</label>
                                                    <div class="col-sm-9">
                                                        <input type="text" value="<%= usuario.ruc %>" name="ruc" class="form-control" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label">Teléfono</label>
                                                    <div class="col-sm-9">
                                                        <input type="tel" value="<%= usuario.telefono %>" name="telefono" class="form-control" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label">Celular</label>
                                                    <div class="col-sm-9">
                                                            <input type="tel" value="<%= usuario.celular %>" name="celular" class="form-control" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <p class="card-description font-weight-bold mt-4">
                                            Dirección
                                        </p>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label">Dirección</label>
                                                    <div class="col-sm-9">
                                                        <input type="text" value="<%= usuario.direccion %>" name="direccion" class="form-control" />
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label">Pais</label>
                                                    <div class="col-sm-9">
                                                        <select name="pais" value="<%= usuario.pais %>" class="form-control">
                                                            <option>Perú</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label">Departamento</label>
                                                    <div class="col-sm-9">
                                                        <input name="departamento" value="<%= usuario.departamento %>" type="text" class="form-control" />
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label">Distrito</label>
                                                    <div class="col-sm-9">
                                                        <input name="distrito" value="<%= usuario.distrito %>" type="text" class="form-control" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label">Provincia</label>
                                                    <div class="col-sm-9">
                                                        <input name="provincia" value="<%= usuario.provincia %>" type="text" class="form-control" />
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label">Ciudad</label>
                                                    <div class="col-sm-9">
                                                        <input name="ciudad" value="<%= usuario.ciudad %>" type="text" class="form-control" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row justify-content-end mt-4">
                                            <button type="submit" class="btn btn-primary">Crear Usuario</button>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </form>
                    </div>
                </div>
            </div>
        <!-- content-wrapper ends -->
        <!-- partial:partials/_footer.html -->
